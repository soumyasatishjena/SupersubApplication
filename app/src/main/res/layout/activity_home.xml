<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeActivity">
    <data>
        <variable
            name="ApiData"
            type="com.example.supersubapplication.pojo.ApiData" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textBlack">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/thirty_five_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/twenty_five_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:padding="@dimen/five_dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_white"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/textActivityTitle"
            android:layout_toEndOf="@id/backButton"
            android:layout_toStartOf="@id/cardBookMark"
            android:textSize="@dimen/text_twenty_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:gravity="start|center"
            android:maxLines="1"
            android:paddingStart="@dimen/five_dp"
            android:paddingTop="@dimen/five_dp"
            android:paddingBottom="@dimen/five_dp"
            android:text="@{ApiData.category}"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            tools:ignore="HardcodedText,RtlSymmetry,SpUsage" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBookMark"
            android:layout_width="@dimen/thirty_five_dp"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/five_dp">
            <ImageView
                android:id="@+id/bookMark"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:padding="@dimen/five_dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_bookmark"
                tools:ignore="ContentDescription" />    
        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/backButton"
            tools:ignore="ScrollViewCount">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_gravity="center" />
                <RelativeLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/layoutImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/urlImage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/two_twenty_dp"
                            android:layout_marginTop="@dimen/twenty_eight_dp"
                            android:layout_marginStart="@dimen/twenty_dp"
                            android:layout_marginEnd="@dimen/twenty_dp"
                            android:scaleType="matrix"
                            app:displayVideoImage="@{ApiData.video.thumbnail}"
                            tools:ignore="ContentDescription" />
                        <ImageView
                            android:id="@+id/imagePlay"
                            android:layout_width="@dimen/fifty_three_dp"
                            android:layout_height="@dimen/fifty_three_dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_play"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>
                    <TextView
                        android:layout_below="@id/layoutImage"
                        android:id="@+id/textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_five_dp"
                        android:layout_marginTop="@dimen/twenty_five_dp"
                        android:textColor="@color/colorWhite"
                        android:text="@{ApiData.illustrations.get(0).caption}"
                        android:textSize="@dimen/text_twenty_two_sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        tools:ignore="HardcodedText" />
                    <View
                        android:layout_below="@id/textTitle"
                        android:id="@+id/viewLine"
                        android:layout_width="@dimen/forty_five_dp"
                        android:layout_height="@dimen/two_dp"
                        android:layout_marginStart="@dimen/thirty_five_dp"
                        android:layout_marginTop="@dimen/twenty_five_dp"
                        android:background="@color/lightGreen"/>
                    <TextView
                        android:id="@+id/textDesc"
                        android:layout_below="@id/viewLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:layout_marginStart="@dimen/thirty_five_dp"
                        android:layout_marginEnd="@dimen/thirty_dp"
                        android:text="@{ApiData.description}"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:layout_below="@id/textDesc"
                        android:id="@+id/textRepetition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_five_dp"
                        android:layout_marginTop="@dimen/twenty_five_dp"
                        android:textColor="@color/colorWhite"
                        android:text="Repetition"
                        android:textSize="@dimen/text_twenty_two_sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_below="@id/textDesc"
                        android:id="@+id/textRepetitionData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/twenty_dp"
                        android:layout_marginTop="@dimen/twenty_five_dp"
                        android:text="@{ApiData.toString()}"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_eighteen_sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        tools:ignore="HardcodedText" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardEquipment"
                        android:layout_below="@id/textRepetitionData"
                        android:layout_marginTop="@dimen/twenty_five_dp"
                        style="@style/CardViewMore">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite">
                            <TextView
                                android:id="@+id/textEquipment"
                                android:text="Equipments"
                                style="@style/TextMoreDisplay"
                                tools:ignore="HardcodedText" />
                            <ImageView
                                android:id="@+id/arrowGo"
                                style="@style/ImageMoreGo"
                                tools:ignore="ContentDescription" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_below="@id/cardEquipment"
                        android:id="@+id/textInfoGraphics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_five_dp"
                        android:layout_marginTop="@dimen/twenty_five_dp"
                        android:textColor="@color/colorWhite"
                        android:text="InfoGraphics"
                        android:textSize="@dimen/text_twenty_two_sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        tools:ignore="HardcodedText" />
                    <androidx.cardview.widget.CardView
                        style="@style/CardViewMore"
                        app:cardCornerRadius="@dimen/fifteen_dp"
                        android:layout_marginTop="@dimen/twenty_eight_dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textInfoGraphics">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="@dimen/twenty_dp">
                            <ImageView
                                android:id="@+id/imageWagonWheel"
                                android:layout_width="match_parent"
                                android:layout_height="280dp"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription"
                                app:displayImage="@{ApiData.illustrations.get(0).imageUrl}"/>

                            <TextView
                                android:layout_below="@id/imageWagonWheel"
                                android:id="@+id/textWagonWheel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/twenty_dp"
                                android:paddingBottom="@dimen/twenty_dp"
                                android:textColor="@color/textBlack"
                                android:text="WagonWheel"
                                android:layout_centerHorizontal="true"
                                android:textSize="@dimen/text_twenty_two_sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/textDescGraphics"
                                android:layout_below="@id/textWagonWheel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_marginStart="@dimen/thirty_five_dp"
                                android:layout_marginEnd="@dimen/thirty_dp"
                                android:text="@{ApiData.illustrations.get(0).description}"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </FrameLayout>
        </ScrollView>
    </RelativeLayout>
</layout>